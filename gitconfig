[alias]
	log = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	default = !git checkout $(git remote show origin | sed -n '/HEAD branch/s/.*: //p')
	contains-tag = "!f() { \
			echo \"üîé Getting SHA for $1\"; \
			sha_1=$(git show-ref refs/tags/$1 -s | head -n1); \
			[[ ! -z $sha_1 ]] \
				&& { echo \"üëá Refs that contain ${sha_1:0:8}\"; } \
				|| { echo \"‚ùå Not Found\"; exit 1; } \
			; \
			git branch --contains $sha_1 -a; \
		}; f"


